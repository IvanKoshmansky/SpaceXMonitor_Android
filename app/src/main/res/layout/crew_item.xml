<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="crewMember"
            type="com.example.android.spacexmonitor.models.CrewMember" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundLight"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tw_crew_item_name_id"
            style="@style/Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="@{crewMember.name}"
            tools:text="tw_crew_item_name_id"/>

        <TextView
            android:id="@+id/tw_crew_item_agency_id"
            style="@style/Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/margin_small"
            android:text="@{crewMember.agency}"
            tools:text="tw_crew_item_agency_id"/>

        <TextView
            android:id="@+id/tw_crew_item_status_id"
            style="@style/Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{crewMember.status}"
            tools:text="tw_crew_item_status_id"/>
    </LinearLayout>
</layout>