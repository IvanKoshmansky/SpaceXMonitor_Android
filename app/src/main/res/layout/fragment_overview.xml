<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.spacexmonitor.main.OverviewFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.android.spacexmonitor.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/overviewFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundLight">

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/margin_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/header_starting_space_id"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tw_header_name_id"
                    style="@style/Body"
                    android:layout_width="@dimen/tab_text_width"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_main_name_column"
                    app:layout_constraintStart_toEndOf="@+id/header_starting_space_id"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tw_header_cores_flight_id"
                    style="@style/Body"
                    android:layout_width="@dimen/tab_text_width"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_main_cores_flight_column"
                    app:layout_constraintStart_toEndOf="@+id/tw_header_name_id"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tw_header_success_id"
                    style="@style/Body"
                    android:layout_width="@dimen/tab_text_width"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_main_success_column"
                    app:layout_constraintStart_toEndOf="@+id/tw_header_cores_flight_id"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tw_header_date_formatted_id"
                    style="@style/Body"
                    android:layout_width="@dimen/tab_text_width"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_main_date_formatted_column"
                    app:layout_constraintStart_toEndOf="@+id/tw_header_success_id"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/b_header_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="header_starting_space_id,tw_header_name_id,tw_header_cores_flight_id,tw_header_success_id,tw_header_date_formatted_id" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/overview_list"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/b_header_id" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>